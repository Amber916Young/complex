<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.complex.mapper.TaskMapper">
    <insert id="insertJobs" parameterType="hashmap">
        insert into datacenter.Job(jobSize,
                                   startTime,
                                   finishTime,
                                   startDate,
                                   finishDate)
                                   values(#{jobSize},
                                          #{startTime},
                                          #{finishTime},
                                          #{startDate},
                                          #{finishDate})
    </insert>

    <update id="updateTasksShow" parameterType="hashmap">
        update Root.task_robots
        <set>
            <if test="is_show_task != null">
                is_show_task = #{is_show_task},
            </if>
        </set>
        where tid = #{tid} and rid=#{rid}
    </update>

</mapper>
